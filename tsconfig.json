{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.test.ts"]
}
